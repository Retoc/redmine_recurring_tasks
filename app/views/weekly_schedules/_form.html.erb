<%= form_for @schedule do |f| %>
  <div class="box">
    <fieldset class="box tabular"><legend><%= @schedule.issue.subject %></legend>
      <input type="hidden" name="issue_id" value="<%= @schedule.issue.id %>">

      <%= error_messages_for 'schedule' %>

      <p>
        <label>
          <%= WeeklySchedule.human_attribute_name(:tracker) %>
          <%= f.collection_select(:tracker_id, Tracker.all, :id, :name) %>
        </label>
      </p>

      <p>
        <label>
          <%= WeeklySchedule.human_attribute_name(:sunday) %>
          <%= f.check_box :sunday %>
        </label>
      </p>

      <p>
        <label>
          <%= WeeklySchedule.human_attribute_name(:monday) %>
          <%= f.check_box :monday %>
        </label>
      </p>

      <p>
        <label>
          <%= WeeklySchedule.human_attribute_name(:tuesday) %>
          <%= f.check_box :tuesday %>
        </label>
      </p>

      <p>
        <label>
          <%= WeeklySchedule.human_attribute_name(:wednesday) %>
          <%= f.check_box :wednesday %>
        </label>
      </p>

      <p>
        <label>
          <%= WeeklySchedule.human_attribute_name(:thursday) %>
          <%= f.check_box :thursday %>
        </label>
      </p>

      <p>
        <label>
          <%= WeeklySchedule.human_attribute_name(:friday) %>
          <%= f.check_box :friday %>
        </label>
      </p>

      <p>
        <label>
          <%= WeeklySchedule.human_attribute_name(:saturday) %>
          <%= f.check_box :saturday %>
        </label>
      </p>

      <p>
        <label>
          <%= WeeklySchedule.human_attribute_name(:time) %>
          <%= f.time_select :time, minute_step: 5 %>
        </label>
      </p>
    </fieldset>
  </div>

  <div>
    <%= f.submit ( f.object.new_record? ? l(:button_add) : l(:button_change)) %>

    <% if @schedule.persisted? %><%= link_to(l(:button_delete), weekly_schedule_path(@schedule), method: :delete, data: {confirm: l(:text_are_you_sure)}) %> |
    <% end %>

    <%= link_to(l(:button_cancel), issue_path(@issue)) %>
  </div>
<% end %>
